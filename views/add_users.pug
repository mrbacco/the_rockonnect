extends layout

block content
    h1 #{title}
        .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign me Up ...

        // register form
        form(action='/users/add', method='POST')
          div.form-group
            label(for='username') Username:
            input#username.form-control(type='text', placeholder='select a username' name='username')
          div.form-group
            label(for='name') Full Name:
            input#name.form-control(type='text', placeholder='first and last' name='name')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='about') About Me:
            textarea#about.form-control(type='text' name='about')
          button.btn.btn-primary(type='submit') Sign up
          
