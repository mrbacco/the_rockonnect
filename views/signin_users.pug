extends layout

block content
    h1 #{title}
        .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign me In...

        // sign in form
        form(method='POST' action='/users/signin/')
          div.form-group
            label(for='username') Username:
            input#username.form-control(type='text', placeholder='type your username' name='username')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
            
          button.btn.btn-primary(type='submit') Sign in
          if error
            h4.error please sign in first to view this page
      .col-md-6.col-md-offset-3